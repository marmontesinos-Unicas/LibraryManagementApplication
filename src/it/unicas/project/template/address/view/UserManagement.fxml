<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="520.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.UserManagementController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <Button fx:id="backButton" text="&lt; Back to Home" onAction="#handleGoBack" />
            <TextField fx:id="searchField" prefWidth="482.0" promptText="Search users..." HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" onAction="#handleSearch" text="ðŸ”" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="120" text="Name" />
                    <TableColumn fx:id="surnameColumn" prefWidth="120" text="Surname" />
                    <TableColumn fx:id="nationalIdColumn" prefWidth="150" text="National ID" /> <TableColumn fx:id="emailColumn" prefWidth="250" text="Email" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT">
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button onAction="#handleViewEditUser" text="View/Edit User" />
            <Button fx:id="registerButton" onAction="#handleRegisterNewUser" text="Register New User" />
        </HBox>
    </bottom>
</BorderPane>
