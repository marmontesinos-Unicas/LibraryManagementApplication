<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.EditMaterialController">

    <!-- Go Back Button - Top Left -->
    <Button mnemonicParsing="false" onAction="#handleGoBack" text="Go Back"
            AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />

    <GridPane layoutX="20.0" layoutY="70.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="70.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

        <!-- Row 0: Title -->
        <Label text="Title *:" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="5.0" />
            </GridPane.margin>
        </Label>
        <VBox spacing="2.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="titleField" />
            <Label fx:id="titleErrorLabel" textFill="red" style="-fx-font-size: 11px;" visible="false" managed="false" />
        </VBox>

        <!-- Row 1: Author -->
        <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <!-- Row 2: ISBN -->
        <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Row 3: Year -->
        <Label text="Year *:" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="5.0" />
            </GridPane.margin>
        </Label>
        <VBox spacing="2.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <TextField fx:id="yearField" />
            <Label fx:id="yearErrorLabel" textFill="red" style="-fx-font-size: 11px;" visible="false" managed="false" />
        </VBox>

        <!-- Row 4: Material Type -->
        <Label text="Material Type *:" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="5.0" />
            </GridPane.margin>
        </Label>
        <VBox spacing="2.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <ComboBox fx:id="materialTypeComboBox" promptText="Select" maxWidth="Infinity" />
            <Label fx:id="materialTypeErrorLabel" textFill="red" style="-fx-font-size: 11px;" visible="false" managed="false" />
        </VBox>

        <!-- Row 5: Genres -->
        <Label text="Genres:" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </Label>
        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <!-- Search TextField with Dropdown -->
            <VBox fx:id="genreSearchContainer" spacing="0">
                <TextField fx:id="genreSearchField" promptText="Search genres..." />
                <ListView fx:id="genreSearchResultsList" prefHeight="100.0" visible="false" managed="false" />
            </VBox>

            <!-- Selected Genres Tags Container -->
            <ScrollPane fitToWidth="true" prefHeight="80.0" style="-fx-background-color: transparent;">
                <FlowPane fx:id="selectedGenresPane" hgap="5.0" vgap="5.0" />
            </ScrollPane>
        </VBox>
    </GridPane>

    <!-- Save Material Button - Bottom Right -->
    <Button mnemonicParsing="false" onAction="#handleUpdateMaterial" prefHeight="26.0" prefWidth="120.0" text="Save Material"
            AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0" />
    <ComboBox fx:id="statusComboBox" promptText="Select Status"/>
</AnchorPane>
