<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.MaterialCatalogController">

    <!-- Search and Filter Section -->
    <VBox spacing="10" styleClass="filter-section"
          AnchorPane.topAnchor="55.0"
          AnchorPane.leftAnchor="15.0"
          AnchorPane.rightAnchor="15.0">

        <!-- Search Bar -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Search:" minWidth="60"/>
            <TextField fx:id="searchField"
                       promptText="Search by title, author, or ISBN..."
                       HBox.hgrow="ALWAYS"/>
            <Button fx:id="clearButton" text="Clear" onAction="#handleClear"/>
        </HBox>

        <!-- Filters -->
        <HBox spacing="20" alignment="CENTER_LEFT">
            <!-- Material Type Filter -->
            <VBox spacing="5">
                <Label text="Material Type:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="materialTypeFilterButton"
                          promptText="All Types"
                          prefWidth="150"
                          editable="false"
                          styleClass="filter-combo"/>
            </VBox>

            <!-- Status Filter -->
            <VBox spacing="5">
                <Label text="Status:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="statusFilterButton"
                          promptText="All Status"
                          prefWidth="150"
                          editable="false"
                          styleClass="filter-combo"/>
            </VBox>

            <!-- Genre Filter -->
            <VBox spacing="5">
                <Label text="Genre:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="genreFilterButton"
                          promptText="All Genres"
                          prefWidth="150"
                          editable="false"
                          styleClass="filter-combo"/>
            </VBox>

            <!-- Year Range -->
            <VBox spacing="5">
                <Label text="Year:" style="-fx-font-weight: bold;"/>
                <HBox spacing="5">
                    <TextField fx:id="yearFromField"
                               promptText="From"
                               prefWidth="70"/>
                    <Label text="-"/>
                    <TextField fx:id="yearToField"
                               promptText="To"
                               prefWidth="70"/>
                </HBox>
            </VBox>
        </HBox>
    </VBox>

    <!-- Table View -->
    <TableView fx:id="materialTable"
               onMouseClicked="#handleTableClick"
               AnchorPane.topAnchor="165.0"
               AnchorPane.bottomAnchor="60.0"
               AnchorPane.leftAnchor="15.0"
               AnchorPane.rightAnchor="15.0">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="200" minWidth="150"/>
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="150" minWidth="100"/>
            <TableColumn fx:id="yearColumn" text="Year" prefWidth="70" minWidth="60"/>
            <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120" minWidth="100"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100" minWidth="80"/>
            <TableColumn fx:id="genreColumn" text="Genre(s)" prefWidth="150" minWidth="120"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" minWidth="80"/>
        </columns>
    </TableView>

    <!-- Back Button -->
    <Button fx:id="backButton"
            text="&lt; Back to Home"
            onAction="#handleBack"
            styleClass="back-button"
            AnchorPane.topAnchor="15.0"
            AnchorPane.leftAnchor="15.0"/>

    <!-- Action Buttons (Admin Only) -->
    <HBox spacing="10" alignment="CENTER_RIGHT" fx:id="adminActionsBox"
          AnchorPane.bottomAnchor="15.0"
          AnchorPane.leftAnchor="15.0"
          AnchorPane.rightAnchor="15.0">

        <Button fx:id="addButton"
                text="Add New Material"
                onAction="#handleAdd"
                styleClass="primary-button"/>
        <Button fx:id="editButton"
                text="Edit Selected"
                onAction="#handleEdit"
                disable="true"/>
        <Button fx:id="deleteButton"
                text="Delete Selected"
                onAction="#handleDelete"
                styleClass="danger-button"
                disable="true"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="resultCountLabel" text="Total: 0 materials"/>
    </HBox>

</AnchorPane>