<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.MaterialManagementController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <Button fx:id="backButton" text="&lt; Back to Home" onAction="#handleGoBack" />
            <TextField fx:id="searchField" prefWidth="482.0" promptText="Search materials (Title, Author, ISBN...)" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" onAction="#handleClear" text="Clear" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <TableView fx:id="materialTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="titleColumn" prefWidth="250" text="Title" />
                    <TableColumn fx:id="authorColumn" prefWidth="180" text="Author" />
                    <TableColumn fx:id="yearColumn" prefWidth="70" text="Year" /> <TableColumn fx:id="materialTypeColumn" prefWidth="100" text="Type" /> <TableColumn fx:id="isbnColumn" prefWidth="120" text="ISBN" />

                    <TableColumn text="Copies Status">
                        <columns>
                            <TableColumn fx:id="availableCountColumn" prefWidth="80" text="Available" />
                            <TableColumn fx:id="onHoldCountColumn" prefWidth="80" text="On Hold" />
                            <TableColumn fx:id="loanedCountColumn" prefWidth="80" text="Loaned" />
                        </columns>
                    </TableColumn>

                    <TableColumn fx:id="quantityColumn" prefWidth="80" text="Total" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button fx:id="viewEditMaterialButton" onAction="#handleViewEditMaterial" text="View/Edit Material" />

            <Button fx:id="addMaterialButton" onAction="#handleAddMaterial" text="Add New Material" />
        </HBox>
    </bottom>
</BorderPane>