<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="303.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.LoginDialogController">

    <VBox alignment="CENTER"
          spacing="25"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0">

        <!-- PANEL COMPLETO -->
        <GridPane hgap="10" vgap="15" alignment="CENTER">

            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints halignment="LEFT" minWidth="200" prefWidth="220"/>
            </columnConstraints>

            <!-- USERNAME -->
            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField"
                       promptText="Enter Username"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- PASSWORD -->
            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField"
                           promptText="Enter Password"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- ERROR -->
            <Label fx:id="errorLabel"
                   textFill="RED"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>

        </GridPane>

        <!-- BOTONES -->
        <HBox alignment="CENTER" spacing="20">
            <Button text="Login" onAction="#handleLogin" prefWidth="90"/>
            <Button text="Cancel" onAction="#handleCancel" prefWidth="90"/>
        </HBox>

    </VBox>

</AnchorPane>
