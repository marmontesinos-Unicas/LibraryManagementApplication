<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="520" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.AddLoanController">

    <VBox spacing="20" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <HBox alignment="CENTER">
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="User National ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nationalIDField" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Material Search:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="searchMaterialField" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Button fx:id="searchButton" onAction="#handleSearch" text="Clear" prefWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </GridPane>
        </HBox>

        <TableView fx:id="materialTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="300.0" text="Title"/>
                <TableColumn fx:id="authorColumn" prefWidth="150.0" text="Author"/>
                <TableColumn fx:id="isbnColumn" prefWidth="150.0" text="ISBN"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER">
            <Button fx:id="addLoanButton" onAction="#handleAddLoan" text="Add" prefWidth="100"/>
        </HBox>

    </VBox>
</AnchorPane>