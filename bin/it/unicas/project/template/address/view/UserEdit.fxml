<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.UserEditController">

    <GridPane layoutX="20.0" layoutY="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

        <!-- Labels -->
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label text="Surname:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label text="Birth date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label text="ID (National ID):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="6" />

        <!-- Input Fields -->
        <TextField fx:id="nameField" promptText="Enter Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField fx:id="surnameField" promptText="Enter Surname" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <DatePicker fx:id="birthdateField" promptText="MM/dd/yyyy" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="true" />
        <TextField fx:id="nationalIDField" promptText="Enter National ID" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField fx:id="usernameField" promptText="Enter Username" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <TextField fx:id="emailField" promptText="Enter Email" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <!-- Role ComboBox -->
        <ComboBox fx:id="roleComboBox" promptText="Select Role" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Admin" />
                    <String fx:value="User" />
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Current Password:" GridPane.rowIndex="7" />
        <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <PasswordField fx:id="currentPasswordField" editable="false" promptText="Current Password" HBox.hgrow="ALWAYS" />
            <TextField fx:id="visiblePasswordField" editable="false" promptText="Current Password" managed="false" visible="false" HBox.hgrow="ALWAYS" />
            <ToggleButton fx:id="showPasswordToggle" mnemonicParsing="false" text="Show" onAction="#handlePasswordToggle" />
        </HBox>

        <Label text="New Password (optional):" GridPane.rowIndex="8" />
        <PasswordField fx:id="newPasswordField" promptText="Enter NEW Password (optional)" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    </GridPane>

    <!-- Buttons -->
    <HBox alignment="CENTER_LEFT" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" >
        <Button mnemonicParsing="false" onAction="#handleSave" prefHeight="26.0" prefWidth="86.0" text="Save Changes" />
        <Button mnemonicParsing="false" onAction="#handleDelete" prefHeight="26.0" prefWidth="86.0" text="Delete User" style="-fx-background-color: #ff5555;" />
        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" spacing="15.0">
            <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
        </HBox>
    </HBox>

</AnchorPane>