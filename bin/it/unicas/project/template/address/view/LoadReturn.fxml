<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.LoadReturnController">

    <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">

            <Button onAction="#handleBackToHome" text="&lt; Back to Home" />

            <TextField fx:id="searchField" prefWidth="482.0" promptText="Search loans..." HBox.hgrow="ALWAYS" />

            <Button fx:id="searchButton" onAction="#handleSearch" text="Clear" />

        </HBox>

        <TableView fx:id="loansTable" prefHeight="380" prefWidth="720" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="materialTypeColumn" prefWidth="124.0" text="Material Type" />
                <TableColumn fx:id="titleColumn" prefWidth="332.4" text="Title" />
                <TableColumn fx:id="userColumn" prefWidth="110.0" text="User" />
                <TableColumn fx:id="dueDateColumn" prefWidth="103.0" text="Due Date" />
                <TableColumn fx:id="delayedColumn" prefWidth="91.2" text="Delayed" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="addLoanButton" onAction="#handleAddLoan" prefWidth="150" text="Add Loan" />
            <Button fx:id="returnLoanButton" onAction="#handleReturnLoan" prefWidth="150" text="Return" />
        </HBox>

    </VBox>
</AnchorPane>