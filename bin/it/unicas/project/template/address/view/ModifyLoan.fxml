<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="520" prefWidth="800"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.ModifyLoanController">

    <VBox spacing="20" style="-fx-padding: 20;"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- GRID FOR USER AND MATERIAL INPUTS -->
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="User National ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nationalIDField" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Material Search:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="searchMaterialField" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Button fx:id="searchButton" text="Clear" prefWidth="100"
                    GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        </GridPane>

        <!-- MATERIAL TABLE -->
        <TableView fx:id="materialTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="300" text="Title"/>
                <TableColumn fx:id="authorColumn" prefWidth="150" text="Author"/>
                <TableColumn fx:id="isbnColumn" prefWidth="150" text="ISBN"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <!-- MODIFY BUTTON -->
        <HBox alignment="CENTER">
            <Button fx:id="modifyLoanButton" text="Modify" prefWidth="120" onAction="#handleModifyLoan"/>
        </HBox>

    </VBox>
</AnchorPane>
