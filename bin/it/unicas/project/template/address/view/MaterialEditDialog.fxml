<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.MaterialEditDialogController">
    <VBox spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="440.0" />
            </columnConstraints>

            <Label text="Material Type:" GridPane.rowIndex="0" />
            <TextField fx:id="materialTypeField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Book, CD, Movie, etc." />

            <Label text="Title:" GridPane.rowIndex="1" />
            <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Author/Director:" GridPane.rowIndex="2" />
            <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Year:" GridPane.rowIndex="3" />
            <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="ISBN:" GridPane.rowIndex="4" />
            <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Current Status (Summary):" GridPane.rowIndex="5" />
            <TextField fx:id="statusField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" promptText="Available/Loaned" />

            <Label text="Total Quantity:" GridPane.rowIndex="6" />
            <TextField fx:id="quantityField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <Label text="Genres:" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.valignment="TOP">
                <GridPane.margin>
                    <Insets top="10.0" />
                </GridPane.margin>
            </Label>
            <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
                <VBox fx:id="genreSearchContainer" spacing="0">
                    <TextField fx:id="genreSearchField" promptText="Search genres..." />
                    <ListView fx:id="genreSearchResultsList" prefHeight="100.0" visible="false" managed="false" />
                </VBox>

                <ScrollPane fitToWidth="true" prefHeight="80.0" style="-fx-background-color: transparent;">
                    <FlowPane fx:id="selectedGenresPane" hgap="5.0" vgap="5.0" />
                </ScrollPane>
            </VBox>

        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding>
                <Insets top="10.0" />
            </padding>
            <Button onAction="#handleSave" text="Save Changes" />
            <Button onAction="#handleCancel" text="Cancel" />
        </HBox>

        <Label fx:id="errorMessageLabel" textFill="RED" wrapText="true" VBox.vgrow="ALWAYS" />

    </VBox>
</AnchorPane>