<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.UserRegistrationController">

    <GridPane layoutX="20.0" layoutY="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /></rowConstraints>

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label text="Surname:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label text="Birth date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label text="ID (National ID):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextField fx:id="nameField" promptText="Enter Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField fx:id="surnameField" promptText="Enter Surname" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <DatePicker fx:id="birthdateField" promptText="MM/dd/yyyy" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="true" />
        <TextField fx:id="nationalIDField" promptText="Enter National ID" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField fx:id="usernameField" promptText="Enter Username" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <PasswordField fx:id="passwordField" promptText="Enter Password (min 8, 1 uppercase, 1 number)" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <tooltip>
                <Tooltip text="Password requirements: at least 8 characters, at least one uppercase letter and at least one digit." />
            </tooltip>
        </PasswordField>
        <TextField fx:id="emailField" promptText="Enter Email" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <ComboBox fx:id="roleComboBox" promptText="Select Role" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="User" />
                    <String fx:value="Admin" />
                </FXCollections>
            </items>
        </ComboBox> </GridPane>

    <HBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" >
        <Button mnemonicParsing="false" onAction="#handleRegisterUser" prefHeight="26.0" prefWidth="86.0" text="Register User" />
        <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
    </HBox>
</AnchorPane>