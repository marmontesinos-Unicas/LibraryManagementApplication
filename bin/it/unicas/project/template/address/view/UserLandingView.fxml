<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefWidth="800" prefHeight="520"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.UserLandingController">

    <!-- My Loans -->
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          prefWidth="360" prefHeight="500"
          style="-fx-border-color: gray; -fx-border-width: 1;">

        <Label text="My Loans" alignment="CENTER" maxWidth="Infinity">
            <font><Font size="20"/></font>
        </Label>

        <TableView fx:id="myLoansTable" VBox.vgrow="ALWAYS" prefHeight="470">
            <columns>
                <TableColumn fx:id="loanTitleColumn" text="Title" prefWidth="170"/>
                <TableColumn fx:id="loanReturnDateColumn" text="Return Date" prefWidth="100"/>
                <TableColumn fx:id="loanStatusColumn" text="Status" prefWidth="90"/>
            </columns>
        </TableView>
    </VBox>


    <!-- My Holds -->
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="380"
          prefWidth="260" prefHeight="500"
          style="-fx-border-color: gray; -fx-border-width: 1;">

        <Label text="My Holds" alignment="CENTER" maxWidth="Infinity">
            <font><Font size="20"/></font>
        </Label>

        <TableView fx:id="myHoldsTable" VBox.vgrow="ALWAYS" prefHeight="470">
            <columns>
                <TableColumn fx:id="holdTitleColumn" text="Title" prefWidth="150"/>
                <TableColumn fx:id="holdMaxDateColumn" text="Max Pickup Date" prefWidth="110"/>
            </columns>
        </TableView>
    </VBox>


    <!-- Botones -->
    <VBox spacing="10"
          AnchorPane.bottomAnchor="10"
          AnchorPane.rightAnchor="10"
          prefWidth="120"
          alignment="BOTTOM_CENTER">

        <Button fx:id="searchButton" text="Search" onAction="#handleSearch" prefWidth="120"/>
        <Button fx:id="notificationsButton" text="Notifications" onAction="#handleNotifications" prefWidth="120"/>
        <Button fx:id="deleteHoldButton" text="Delete Hold" onAction="#handleDeleteHold" prefWidth="120"/>
    </VBox>

</AnchorPane>
