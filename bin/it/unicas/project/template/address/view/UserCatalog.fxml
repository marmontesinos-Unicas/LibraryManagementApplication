<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicas.project.template.address.view.UserCatalogController">

    <!-- Search and Filter Section -->
    <VBox spacing="10" styleClass="filter-section"
          AnchorPane.topAnchor="55.0"
          AnchorPane.leftAnchor="15.0"
          AnchorPane.rightAnchor="15.0">

        <!-- Search Bar -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Search:" minWidth="60"/>
            <TextField fx:id="searchField"
                       promptText="Search by title, author, or ISBN..."
                       HBox.hgrow="ALWAYS"/>
            <Button fx:id="clearButton" text="Clear" onAction="#handleClear"/>
        </HBox>

        <!-- Filters -->
        <HBox spacing="20" alignment="CENTER_LEFT">
            <!-- Material Type Filter -->
            <VBox spacing="5">
                <Label text="Material Type:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="materialTypeFilterButton"
                          promptText="All Types"
                          prefWidth="150"
                          editable="false"
                          styleClass="filter-combo"/>
            </VBox>

            <!-- Genre Filter -->
            <VBox spacing="5">
                <Label text="Genre:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="genreFilterButton"
                          promptText="All Genres"
                          prefWidth="150"
                          editable="false"
                          styleClass="filter-combo"/>
            </VBox>

            <!-- Year Range -->
            <VBox spacing="5">
                <Label text="Year:" style="-fx-font-weight: bold;"/>
                <HBox spacing="5">
                    <TextField fx:id="yearFromField"
                               promptText="From"
                               prefWidth="70"/>
                    <Label text="-"/>
                    <TextField fx:id="yearToField"
                               promptText="To"
                               prefWidth="70"/>
                </HBox>
            </VBox>
        </HBox>
    </VBox>

    <!-- Table View -->
    <TableView fx:id="materialTable"
               AnchorPane.topAnchor="165.0"
               AnchorPane.bottomAnchor="60.0"
               AnchorPane.leftAnchor="15.0"
               AnchorPane.rightAnchor="15.0">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="180" minWidth="150"/>
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="130" minWidth="100"/>
            <TableColumn fx:id="yearColumn" text="Year" prefWidth="60" minWidth="50"/>
            <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="110" minWidth="90"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="90" minWidth="70"/>
            <TableColumn fx:id="genreColumn" text="Genre(s)" prefWidth="120" minWidth="100"/>
            <TableColumn fx:id="actionColumn" text="Action" prefWidth="110" minWidth="110"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- Back Button -->
    <Button fx:id="backButton"
            text="&lt; Back to Home"
            onAction="#handleBack"
            styleClass="back-button"
            style="-fx-font-size: 14px;"
            AnchorPane.topAnchor="15.0"
            AnchorPane.leftAnchor="15.0"/>

    <!-- Result Count -->
    <HBox spacing="10" alignment="CENTER_RIGHT"
          AnchorPane.bottomAnchor="15.0"
          AnchorPane.leftAnchor="15.0"
          AnchorPane.rightAnchor="15.0">
        <Label fx:id="resultCountLabel" text="Total: 0 materials" style="-fx-font-weight: bold;"/>
    </HBox>

</AnchorPane>