<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.CheckComboBox?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="it.unicas.project.template.address.view.AddMaterialController"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          alignment="TOP_CENTER"
          hgap="12" vgap="8"
          prefWidth="600" prefHeight="520">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints minWidth="120" prefWidth="140" halignment="RIGHT"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="260" prefWidth="360"/>
    </columnConstraints>

    <!-- Title -->
    <Label text="Title *:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <!-- Author -->
    <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- ISBN -->
    <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Year -->
    <Label text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <!-- Material Type -->
    <Label text="Material Type *:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <ComboBox fx:id="materialTypeComboBox"
              promptText="Select type"
              maxWidth="Infinity"
              GridPane.columnIndex="1"
              GridPane.rowIndex="4"/>

    <!-- Genres with scroll & multi-select -->
    <Label text="Genres:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <CheckComboBox fx:id="genreComboBox"
                   maxWidth="Infinity"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="5"/>

    <!-- Add genre row -->
    <HBox spacing="8" alignment="CENTER_LEFT"
          GridPane.columnIndex="1" GridPane.rowIndex="6">
        <TextField fx:id="newGenreField" promptText="Add new genre (optional)" HBox.hgrow="ALWAYS"/>
        <Button fx:id="addGenreButton" text="Add Genre"/>
    </HBox>

    <!-- Save -->
    <HBox spacing="8" alignment="CENTER_RIGHT"
          GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button text="Save Material" onAction="#handleSaveMaterial"/>
    </HBox>

</GridPane>


