<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="520" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.AddMaterialController">

    <GridPane layoutX="20.0" layoutY="30.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="30.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="140.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="titleField" promptText="Material Title" />
            <Label fx:id="titleErrorLabel" textFill="red" style="-fx-font-size: 11px;" visible="false" managed="false" />
        </VBox>

        <Label text="Author/Director:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
            <TextField fx:id="authorField" promptText="Author or Director" />
            <Label fx:id="authorErrorLabel" textFill="red" style="-fx-font-size: 11px;" visible="false" managed="false" />
        </VBox>

        <Label text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
            <TextField fx:id="yearField" promptText="e.g. 2024" />
            <Label fx:id="yearErrorLabel" textFill="red" style="-fx-font-size: 11px;" visible="false" managed="false" />
        </VBox>

        <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="3">
            <TextField fx:id="isbnField" promptText="e.g. 978-3-16-148410-0 (optional)" />
            <Label fx:id="isbnErrorLabel" textFill="red" style="-fx-font-size: 11px;" visible="false" managed="false" />
        </VBox>

        <Label text="Material Type:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="4">
            <ComboBox fx:id="materialTypeComboBox" promptText="Select" maxWidth="Infinity" />
            <Label fx:id="materialTypeErrorLabel" textFill="red" style="-fx-font-size: 11px;" visible="false" managed="false" />
        </VBox>

        <Label text="Genres:" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </Label>
        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <VBox fx:id="genreSearchContainer" spacing="0">
                <TextField fx:id="genreSearchField" promptText="Search genres..." />
                <ListView fx:id="genreSearchResultsList" prefHeight="100.0" visible="false" managed="false" />
            </VBox>

            <ScrollPane fitToWidth="true" prefHeight="80.0" style="-fx-background-color: transparent;">
                <FlowPane fx:id="selectedGenresPane" hgap="5.0" vgap="5.0" />
            </ScrollPane>
        </VBox>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
        <Button mnemonicParsing="false" onAction="#handleSave" text="Save Material" />
    </HBox>

    <Label fx:id="messageLabel" layoutX="20.0" layoutY="470.0" prefWidth="550.0" wrapText="true" textFill="RED"
           AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" />

</AnchorPane>