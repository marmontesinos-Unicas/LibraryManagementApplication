<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.project.template.address.view.AddMaterialController">
    <GridPane layoutX="20.0" layoutY="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

        <Label text="Title *:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label text="Year *:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label text="Material Type *:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Label text="Genres:" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </Label>

        <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <ComboBox fx:id="materialTypeComboBox" promptText="Select" GridPane.columnIndex="1" GridPane.rowIndex="4" maxWidth="Infinity" />

        <!-- Genre Selection Area -->
        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <!-- Search TextField with Dropdown -->
            <VBox fx:id="genreSearchContainer" spacing="0">
                <TextField fx:id="genreSearchField" promptText="Search genres..." />
                <ListView fx:id="genreSearchResultsList" prefHeight="100.0" visible="false" managed="false" />
            </VBox>

            <!-- Selected Genres Tags Container -->
            <ScrollPane fitToWidth="true" prefHeight="80.0" style="-fx-background-color: transparent;">
                <FlowPane fx:id="selectedGenresPane" hgap="5.0" vgap="5.0" />
            </ScrollPane>
        </VBox>
    </GridPane>

    <HBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <Button mnemonicParsing="false" onAction="#handleSaveMaterial" prefHeight="26.0" prefWidth="100.0" text="Save Material" />
        <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
    </HBox>
</AnchorPane>